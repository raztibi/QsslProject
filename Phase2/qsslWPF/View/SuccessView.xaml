<Window x:Class="qsslWPF.View.SuccessView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qsslWPF.View"
        xmlns:viewModel="clr-namespace:qsslWPF.ViewModels"
        mc:Ignorable="d"
        Title="SuccessView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Window.DataContext>
        <viewModel:SuccessViewModel/>
    </Window.DataContext>
    
    <Border CornerRadius="20"
            Background="#1F4784"
            BorderBrush="SkyBlue"
            BorderThickness="3"
            >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

        <Button Grid.Row="1" 
        Content="←"
        Width="40"
        Height="40"
        Background="Transparent"
        Foreground="White"
        FontSize="20"
        FontFamily="Consolas"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="10,10,0,0"
        Command="{Binding ReturnCommand}"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width ="25"/>
                    <ColumnDefinition Width ="25"/>
                    <ColumnDefinition Width ="8"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Success"
                           Foreground="White"
                           FontSize="12"
                           FontFamily="Consolas"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                <Button x:Name="btnMinimize"
                        Background="#1F4784"
                        BorderThickness="0"
                        Content="-"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Consolas"
                        Cursor="Hand"
                        Grid.Column="1"
                        Margin="0,1,0,0"
                        Click="btnMinimize_Click">
                </Button>
                <Button x:Name="btnCloseWindow"
                        Background="#1F4784"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Consolas"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,1,0,0"
                        Click="btnCloseWindow_Click">
                </Button>
            </Grid>

            <StackPanel
                        Grid.Row="1"
                        Orientation="Vertical"
                        Margin="150,35,150,0">

                <TextBlock Text="QSSL" 
                           Foreground="White"
                           FontSize="25"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           FontFamily="Comic Sans MS"/>

                <Image Source="/Resources/vault.jpg" 
                       Width="150" Height="150"/>

                <TextBlock Text="Hello King" 
                           Foreground="White"
                           FontSize="35"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           FontFamily="Constantia"
                           Margin="0,15,0,15"/>
               
                <TextBlock Text="Money Amount:" 
                           Foreground="White"
                           FontSize="25"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           FontFamily="Constantia"
                           Margin="0,15,0,15"/>

                <Border CornerRadius="15" 
                        BorderBrush="SteelBlue" 
                        BorderThickness="2" 
                        Background="LightSkyBlue" 
                        Padding="5"
                        Height="50">
                    
                    <TextBlock Text="99999999999999" 
                           Foreground="black"
                           FontSize="40"
                           FontWeight="Normal"
                           HorizontalAlignment="Center"
                           FontFamily="Constantia" VerticalAlignment="Bottom"
                           />

                </Border>

                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"/>


            </StackPanel>
        </Grid>
    </Border>
</Window>
